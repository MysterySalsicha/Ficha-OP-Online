      "from": "vivo",
      "to": "inconsciente",
      "trigger": "damage",
      "check": "currentPv <= 0"
    },
    {
      "from": "inconsciente",
      "to": "morto",
      "trigger": "damage",
      "check": "currentPv <= -maxPv"
    },
    {
      "from": "inconsciente",
      "to": "vivo",
      "trigger": "healing",
      "check": "currentPv > 0"
    }
  ],
  "sanity": [
    {
      "from": "sao",
      "to": "abalado",
      "trigger": "sanityLoss",
      "check": "currentSan <= maxSan / 2"
    },
    {
      "from": "abalado",
      "to": "enlouquecendo",
      "trigger": "sanityLoss",
      "check": "currentSan <= 0"
    },
    {
      "from": "enlouquecendo",
      "to": "insano",
      "trigger": "sceneEnd",
      "check": "always"
    }
  ]
